<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_pattern"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_eyeball"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="The Eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white"
            android:textColor="@color/teal_700"
            android:textSize="25sp"
            android:padding="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Tap on generate to start"
            android:background="@color/white"
            android:textColor="@color/darkblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="30sp"
            android:id="@+id/guessings"
            app:layout_constraintTop_toBottomOf="@+id/title" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="60dp"/>
    <Button
            android:text="Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/up"
            android:background="@color/mustard"
            android:textColor="@color/white"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/guessings" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.788"/>
    <Button
            android:text="Down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/down"
            android:textColor="@color/white"
            android:background="@color/mustard"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/guessings" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.241"/>
    <Button
            android:text="Generate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/generate"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/down"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Guessed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="25sp"
            android:id="@+id/guessed" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/down"/>


</androidx.constraintlayout.widget.ConstraintLayout>